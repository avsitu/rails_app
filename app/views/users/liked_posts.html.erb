<% provide(:title, "My Liked Posts") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for current_user %>
      <h1><%= current_user.name %></h1>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%=pluralize(@microposts.count, 'Post')%> Liked</h3>
    <% if @microposts.any? %>
      <ul class="microposts">
        <%= render @microposts %>
      </ul>
      <%= will_paginate @microposts%>
    <% end %>
  </div>
</div>